{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Tauri App",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://api.publicapis.org/*", "https://m32m1.mocklab.io/*"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "create": false,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.musicbydarcy.studioAssist",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "center": true,
        "fileDropEnabled": true,
        "fullscreen": false,
        "hiddenTitle": true,
        "resizable": true,
        "title": "Tauri App",
        "titleBarStyle": "Overlay",
        "width": 1920,
        "height": 1080,
        "minWidth": 900,
        "minHeight": 800
      }
    ]
  }
}
