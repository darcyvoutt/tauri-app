{
  "build": {
    "beforeDevCommand": "yarn tauri-dev",
    "beforeBuildCommand": "yarn tauri-build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Tauri App Starter",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {
        "all": true
      },
      "clipboard": {
        "writeText": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": true,
        "open": false,
        "save": false
      },
      "fs": {
        "all": false,
        "copyFile": false,
        "createDir": true,
        "exists": true,
        "readDir": false,
        "readFile": true,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": ["$APPDATA/*"],
        "writeFile": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://api.publicapis.org/entries"
        ]
      },
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "create": false,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.morethancoding.TauriStarter",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "center": true,
        "fileDropEnabled": true,
        "fullscreen": false,
        "hiddenTitle": true,
        "resizable": true,
        "title": "Tauri App",
        "titleBarStyle": "Overlay",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 800
      }
    ]
  }
}
